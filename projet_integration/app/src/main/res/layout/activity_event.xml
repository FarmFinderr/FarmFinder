<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Page Event"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Search bar -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rechercher un event"
        android:layout_margin="10dp"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Filtrer par position"
        android:layout_margin="10dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- FrameLayout for Image and Open Button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Image -->
            <ImageView
                android:id="@+id/postImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/terrain" />

            <!-- Open Button -->
            <Button
                android:id="@+id/openButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:text="Open"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />
        </FrameLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Beautiful 3 ha land located 14 km from Tunis Center..."
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Date -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Event Date: 27 Février 2024"
            android:textSize="12sp"
            android:textColor="#888888" />

        <!-- Price and Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Price Tag -->
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price: $20,000"
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

            <!-- "Participer" Button -->
            <Button
                android:id="@+id/actionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participer"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <!-- "Voir Plus" Link -->
            <TextView
                android:id="@+id/moreLinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Voir Plus"
                android:textSize="14sp"
                android:textColor="#FFA500"
                android:fontFamily="sans-serif-medium"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- FrameLayout for Image and Open Button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Image -->
            <ImageView
                android:id="@+id/postImageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/terrain2" />

            <!-- Open Button -->
            <Button
                android:id="@+id/openButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:text="Sold"
                android:backgroundTint="#FF0000"
                android:textColor="#FFFFFF" />
        </FrameLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Beautiful 3 ha land located 14 km from Tunis Center..."
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Date -->
        <TextView
            android:id="@+id/dateTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Event Date: 27 Février 2024"
            android:textSize="12sp"
            android:textColor="#888888" />

        <!-- Price and Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Price Tag -->
            <TextView
                android:id="@+id/priceTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price: $40,000"
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

            <!-- "Participer" Button -->
            <Button
                android:id="@+id/actionButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participer"
                android:enabled="false"
                android:backgroundTint="#B0B0B0"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <!-- "Voir Plus" Link -->
            <TextView
                android:id="@+id/moreLinkTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Voir Plus"
                android:textSize="14sp"
                android:textColor="#FFA500"
                android:fontFamily="sans-serif-medium"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>





</LinearLayout>
