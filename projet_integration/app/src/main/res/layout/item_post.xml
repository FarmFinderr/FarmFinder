<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/background_post"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Section de l'utilisateur -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Image de profil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ihebphoto"
            app:shapeAppearanceOverlay="@style/RoundedImageProfile"
            android:contentDescription="Profile Image"
            android:elevation="2dp"/>

        <!-- Nom et date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de l'utilisateur"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1A237E" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 dÃ©cembre 2024"
                android:textSize="12sp"
                android:textColor="#757575" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section de localisation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_location_on_24"
            android:tint="#2196F3" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Tunis, Centre-ville"
            android:textSize="14sp"
            android:textColor="#424242" />
    </LinearLayout>

    <!-- Contenu du post -->
    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 ha Ã  vendre Ã  14 km de Tunis centre..."
        android:textSize="15sp"
        android:textColor="#212121"
        android:layout_marginTop="8dp" />

    <!-- Section Surface et Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/airTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Surface : 3 ha"
            android:textSize="14sp"
            android:textColor="#00796B" />

        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type : RÃ©sidentiel"
            android:textSize="14sp"
            android:textColor="#00796B"
            android:gravity="end" />
    </LinearLayout>

    <!-- Image du post -->
    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/terrain"
        android:contentDescription="Image du terrain"
        android:elevation="3dp" />

    <!-- Section Prix -->
    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Prix : 1 200 000 TND"
        android:textSize="18sp"
        android:textColor="#D84315"
        android:textStyle="bold"
        android:gravity="end" />

    <!-- Section Likes et Commentaires -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <!-- IcÃ´ne Like -->
        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_favorite_24"
            android:tint="#E53935" />

        <!-- Nombre de likes -->
        <TextView
            android:id="@+id/likesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 10 Likes"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="#616161" />

        <!-- Champ commentaire -->
        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="ðŸ’¬ Ajouter un commentaire..."
            android:background="@drawable/background_comment"
            android:padding="8dp"
            android:textSize="14sp" />

        <!-- Bouton Envoyer -->
        <ImageView
            android:id="@+id/sendCommentIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/baseline_send_24"
            android:tint="#1E88E5" />
    </LinearLayout>
</LinearLayout>
