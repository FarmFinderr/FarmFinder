<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ParticipationActivity"
    android:background="@android:color/white"
    android:elevation="4dp">

    <!-- Existing UI Components -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/eventImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/terrain" />

        <Button
            android:id="@+id/openButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:text="Open"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </FrameLayout>

    <TextView
        android:id="@+id/eventTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Event Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/eventDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Event Description: Beautiful 3 ha land located 14 km from Tunis Center..."
        android:textSize="14sp"
        android:textColor="#000000"
        android:maxLines="3"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Event Date: 27 FÃ©vrier 2024"
        android:textSize="12sp"
        android:textColor="#888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/eventPriceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price: $20,000"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:textStyle="bold" />

        <Button
            android:id="@+id/participerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participer"
            android:backgroundTint="#FFA500"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/moreLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Voir Plus"
            android:textSize="14sp"
            android:textColor="#FFA500"
            android:fontFamily="sans-serif-medium"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- RecyclerView for Registered Users -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/registeredUsersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:padding="8dp"
         />
</LinearLayout>
